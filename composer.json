{
    "name": "shengamo/zmsms",
    "description": "A Laravel package for integrating with an SMS gateway service in Zambia. This package allows you to send SMS messages and check your SMS balance through a simple and intuitive API. The package ensures that there is sufficient SMS balance before sending any messages, making it easy to manage and automate SMS communications within your Laravel application.",
    "keywords": [
        "shengamo",
        "zmsms"
    ],
    "homepage": "https://github.com/shengamo/zmsms",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mo Malenga",
            "email": "mo@shengamo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Shengamo\\Zmsms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shengamo\\Zmsms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shengamo\\Zmsms\\ZmsmsServiceProvider"
            ],
            "aliases": {
                "Zmsms": "Shengamo\\Zmsms\\ZmsmsFacade"
            }
        }
    }
}
